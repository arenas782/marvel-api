<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/tools">
    <data>
        <variable
            name="item"
            type="com.example.marvelapi.data.model.response.MarvelCharacter" />
        <variable
            name="viewModel"
            type="com.example.marvelapi.ui.characters.main.viewmodel.CharactersViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/back_button"
                    android:src="@drawable/ic_arrow_back_white_24dp"/>
                <TextView
                    app:layout_constraintStart_toEndOf="@id/back_button"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/post_title_tv"
                    android:textColor="@color/white"
                    android:text="@string/details"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>



        <com.facebook.shimmer.ShimmerFrameLayout
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/shimmer_view_container"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_character_poster_shimmer"
                    android:background="@color/gray2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="8dp"
                    android:layout_width="100dp"
                    android:layout_height="140dp"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:layout_marginStart="8dp"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:background="@color/gray2"
                    android:id="@+id/tv_character_name_shimmer"
                    app:layout_constraintTop_toTopOf="@id/iv_character_poster_shimmer"
                    app:layout_constraintStart_toEndOf="@id/iv_character_poster_shimmer"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="@{item.name}" />
                <TextView
                    android:layout_marginStart="8dp"
                    android:layout_width="0dp"
                    android:background="@color/gray2"
                    android:layout_height="40dp"
                    android:id="@+id/tv_character_description_shimmer"
                    app:layout_constraintTop_toBottomOf="@id/tv_character_name_shimmer"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toEndOf="@id/iv_character_poster_shimmer"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="14sp"
                    android:text="@{item.description}" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="100dp"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:contentPadding="8dp"
                        android:clipToPadding="true"
                        app:cardUseCompatPadding="true"
                        android:elevation="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:background="@color/gray2"
                            android:layout_margin="12dp"
                            android:text="@{item.name}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/card1"
                        android:id="@+id/card2"
                        app:contentPadding="8dp"
                        android:clipToPadding="true"
                        app:cardUseCompatPadding="true"
                        android:elevation="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:background="@color/gray2"
                            android:layout_margin="12dp"
                            android:text="@{item.name}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/card2"
                        app:contentPadding="8dp"
                        android:clipToPadding="true"
                        app:cardUseCompatPadding="true"
                        android:elevation="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:background="@color/gray2"
                            android:layout_margin="12dp"
                            android:text="@{item.name}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/regular_frame"
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent">
            <ImageView
                android:id="@+id/iv_character_poster"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="12dp"
                android:layout_marginStart="8dp"
                android:layout_width="100dp"
                android:layout_height="140dp"
                tools:ignore="ContentDescription" />
            <TextView
                android:layout_marginStart="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_character_name"
                app:layout_constraintTop_toTopOf="@id/iv_character_poster"
                app:layout_constraintStart_toEndOf="@id/iv_character_poster"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@{item.name}" />
            <TextView
                android:layout_marginStart="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_character_description"
                app:layout_constraintTop_toBottomOf="@id/tv_character_name"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@id/iv_character_poster"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="14sp"
                android:text="@{item.description}" />
            <TextView
                android:layout_marginStart="8dp"
                android:id="@+id/tv_character_series"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_character_poster"
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:text="Series of this Character"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toTopOf="@id/rv_character_series"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                bind:adapter="@{viewModel.characterSeriesAdapter}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_width="0dp"
                android:id="@+id/rv_character_series"
                tools:listitem="@layout/item_character_serie"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_character_series"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout >
</layout>